@{
    ViewData["Title"] = "Migrate to New Zealand";
}

<section class="py-5 bg-white">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="display-4 text-center mb-4">Migrate to New Zealand</h1>
            <p class="lead text-muted">
                Discover multiple residency pathways tailored for skilled professionals, families, retirees, and investors.
            </p>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Skilled Migrant Category (SMC)</h5>
                        <p class="card-text">Points-based residency pathway for professionals with qualifications and experience.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Green List – Straight to Residence</h5>
                        <p class="card-text">Fast-track residency for critical skill roles listed by Immigration NZ.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Parent Category</h5>
                        <p class="card-text">Family reunification for parents of New Zealand citizens or residents.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Parent Retirement Category</h5>
                        <p class="card-text">Residency for financially independent retirees wishing to join family in NZ.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Partner Category</h5>
                        <p class="card-text">Residency for partners or spouses of New Zealanders.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Active Investor Plus</h5>
                        <p class="card-text">Invest NZ$5 million+ in eligible assets to qualify for fast-tracked residency.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center">
            <h4 class="fw-semibold mb-3">Need help identifying the best path for your future?</h4>
            <p class="text-muted mb-4">Our licensed advisers offer personalized assessments and full migration planning.</p>
            <a href="@Url.Action("Contact", "Home")" class="btn btn-success btn-lg px-4">
                Contact Us for a Personalized Assessment
            </a>
        </div>
    </div>
</section>
