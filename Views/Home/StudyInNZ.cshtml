@{
    ViewData["Title"] = "Study in New Zealand";
}

<div class="study-page py-5">
    <div class="container">
        <h1 class="display-4 text-center mb-4">Study in New Zealand</h1>

        <div class="text-center mb-4">
            <p class="lead">Your gateway to world-class education in a safe, welcoming, and beautiful country.</p>
        </div>

        <div class="row text-center mb-5">
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-school fa-3x text-primary mb-3"></i>
                        <h4 class="card-title">Primary School</h4>
                        <p class="card-text">Entry from age 5, with guardian visa options for parents.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-user-graduate fa-3x text-success mb-3"></i>
                        <h4 class="card-title">Secondary School</h4>
                        <p class="card-text">Flexible admission across junior and senior levels.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-university fa-3x text-warning mb-3"></i>
                        <h4 class="card-title">Tertiary Education</h4>
                        <p class="card-text">8 prestigious universities with globally recognized degrees.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-md-6">
                <div class="card border-left-primary shadow-sm h-100">
                    <div class="card-body">
                        <h4 class="card-title"><i class="fas fa-dollar-sign text-primary mr-2"></i>Estimated Costs</h4>
                        <ul class="list-unstyled mt-3">
                            <li><strong>Tuition:</strong> Primary NZ$12,000–18,000/year</li>
                            <li><strong>Tuition:</strong> Secondary NZ$15,000–25,000/year</li>
                            <li><strong>Tuition:</strong> University NZ$25,000–35,000/year</li>
                            <li><strong>Living Expenses:</strong> Approx. NZ$20,000/year</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-left-success shadow-sm h-100">
                    <div class="card-body">
                        <h4 class="card-title"><i class="fas fa-file-alt text-success mr-2"></i>Visa Requirements</h4>
                        <ul class="list-unstyled mt-3">
                            <li>✅ Offer of Place from a New Zealand institution</li>
                            <li>✅ Proof of sufficient funds</li>
                            <li>✅ Medical and character clearance</li>
                            <li>✅ Student visa application</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center my-5">
            <h3 class="mb-3">Let us guide you every step of the way.</h3>
            <p class="lead mb-4">From choosing the right school to submitting a strong visa application — we’ve got you covered.</p>
            <a href="@Url.Action("Contact", "Home")" class="btn btn-lg btn-success shadow px-5 py-2">Contact Us Today</a>
        </div>
    </div>
</div>
