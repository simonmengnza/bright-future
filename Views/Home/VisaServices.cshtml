@{
    ViewData["Title"] = "Visa Services";
}

<section class="py-5 bg-white">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="display-4 text-center mb-4">Visa Services</h1>
            <p class="lead text-muted">
                We provide expert assistance across all major visa categories for individuals, families, students, and workers planning to come to New Zealand.
            </p>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-md-6">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Student Visa</h5>
                        <p class="card-text">For international students enrolling in primary, secondary, or tertiary education programs in New Zealand.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Visitor Visa</h5>
                        <p class="card-text">Short-term visa for tourism, family visits, or business purposes. Flexible durations available.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Accredited Employer Work Visa (AEWV)</h5>
                        <p class="card-text">For skilled workers with job offers from Immigration NZ-accredited employers.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Partner of NZ Worker Work Visa</h5>
                        <p class="card-text">Enables partners of work visa holders to join and work in New Zealand.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Partner of NZ Resident/Citizen Work Visa</h5>
                        <p class="card-text">Allows partners of New Zealand residents or citizens to work while living together in NZ.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center">
            <h4 class="fw-semibold mb-3">Unsure which visa applies to you?</h4>
            <p class="text-muted mb-4">Let our licensed advisers guide you through the process from eligibility to application.</p>
            <a href="@Url.Action("Contact", "Home")" class="btn btn-success btn-lg px-4">
                Speak to an Adviser
            </a>
        </div>
    </div>
</section>
