@{
    ViewData["Title"] = "Difficult Immigration Issues";
}

<section class="py-5 bg-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h1 class="text-dark" style="font-size: 2.5rem; font-weight: normal;">
                    Difficult Immigration Issues
                </h1>
                <p class="lead text-muted mt-3">
                    We specialize in handling complex immigration cases with professionalism and care.
                </p>

                <ul class="list-unstyled mt-4">
                    <li class="mb-3">
                        <strong>Section 61 Request:</strong> For individuals who are unlawfully in New Zealand and seek to request a visa directly from the Minister.
                    </li>
                    <li class="mb-3">
                        <strong>Character Waiver:</strong> For applicants with past criminal convictions or character issues.
                    </li>
                    <li class="mb-3">
                        <strong>Medical Waiver:</strong> For applicants with medical conditions that may affect their visa eligibility.
                    </li>
                </ul>

                <a href="@Url.Action("Contact", "Home")" class="btn btn-success btn-lg px-4 mt-4">
                    Contact Us for Support
                </a>
            </div>

            <div class="col-lg-6 text-center">
                <img src="~/images/family-united.jpg" alt="Difficult Immigration Help" class="img-fluid rounded shadow-sm">
            </div>
        </div>
    </div>
</section>
